<h3>Word: <%= @definition.word.spelling %></h3>
<br>
<hr>
<br>
<h2>Definition: <%= @definition.text %></h2>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="text">Redefine</label>
  <input id="text" name="text" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.spelling %></a>
