<h1>Disctionary Words</h1>

<h3>Added words</h3>

<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
        <li><a href="/words/<%= word.id %>"><%= word.spelling %></a></li>

      <% end %>
  </ul>
<% else %>
  <p>There are currently no records to display.</p>
<% end %>

<a href="/words/new">Add a new word</a>
<hr>
<form action="/query_word" method="post">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="spelling" class="form-control" type="text">
  </div>

  <button type="submit" class="btn"> Go!</button>
</form>
