<h4><%= @album.artist %></h4>

<h3>Definition</h3>

  <% if @album.definitions %>
    <ul>
      <% @album.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.text %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>No definitions added</p>
  <% end %>

<h4>Add a Definition:</h4>

<form action="/word/<%= @album.id %>/songs" method="post">
  <div class="form-group">
    <label for="def_text">Definition:</label>
    <input id="def_text" name="def_text" class="form-control" type="text">
  <button type="submit" class="btn">Add</button>
</form>



